
 #container {
      width: 100%;
      height: 100%;
      margin:auto;
      -webkit-perspective: 800; /* For compatibility with iPhone 3.0, we leave off the units here */
      -webkit-perspective-origin: 50% 250px;
	  background:#202020;
      background-image: -webkit-radial-gradient(#303040,#101010);
	      	          -webkit-box-shadow:8px 10px 10px rgba(10,10,10,0.6);
    }
    #stage {
      width: 100%;
      height: 100%;
	        display:inline-block;
      -webkit-transition: -webkit-transform 3s;
      -webkit-transform-style: preserve-3d;
      -webkit-transform : translateZ(-800px);
    }
    
    #shape {
      position: relative;
      top: 60px;
      margin: 0 auto;
      
      width: 480px;
      height: 320px;
      -webkit-transform-style: preserve-3d;
    }

    
    .plane {

      position: absolute;
      visibility:visible;
      width: 480px;
      height: 320px;
	  padding:5px;
      border: 1px solid white;
      -webkit-border-radius: 12px;
      -webkit-box-sizing: border-box;
		background-repeat:no-repeat;        background-position:bottom center;
		-_webkit-box-reflect: below 10px -webkit-linear-gradient(transparent,transparent 30%,rgba(255,255,255,0.1) 70%,rgba(255,255,255,0.4));
		-webkit-box-shadow:0 0 7px rgba(255,192,192,0.8);
      -webkit-transition: -webkit-transform 1s;
      -webkit-backface-visibility: hidden;
    }
	.plane{
		background-color: rgba(255, 222, 222, 0.8);
		}
    #shape.backfaces  {
      -webkit-backface-visibility: v_isible;
    }
    




